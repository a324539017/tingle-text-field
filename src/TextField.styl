@require '../node_modules/tingle-style/src/var'

.tTextField
    /* support multiple line input */
    &.multiline
        height 93px

        .tFieldBox
            padding-top 11px

        .tTextFieldPlaceholder
            top 13px

        .tTextFieldInput
            resize none
            height 75px
            line-height 1.5

        .tTextFieldIcon
            display none

.tTextFieldInput
    padding 0
    border none
    outline none
    color #424242
    width 100%
    padding-right 23px
    line-height 20px
    background-color transparent
    z-index 2
    position relative /*重要，解决UC、猎豹等浏览器z-index失效的问题*/


.tTextFieldPlaceholder
    position absolute
    left 0
    top 0
    max-width 100%
    height 20px
    line-height 20px
    color #bdbdbd
    z-index 0

/* add clear input icon */
.tTextFieldIcon
    position absolute
    top -12px
    right 0
    z-index 10
    display inline-block
    padding-left 3px
    width 35px
    height 44px
    line-height 20px

    .tIcon
        position absolute
        top 14px
        width 17px
        height 17px
        fill #bbb

.readOnly
    .tTextFieldInput
        color #bdbdbd