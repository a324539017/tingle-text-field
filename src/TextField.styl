@require '../node_modules/tingle-style/src/var'

.tTextField
    min-height rem(88)

    /* support multiple line input */
    &.multiline
        height rem(185)

        .tFieldBox
            padding-top rem(22)

        .tTextFieldPlaceholder
            top rem(26)

        .tTextFieldInput
            resize none
            height rem(150)
            line-height 1.5

        .tTextFieldIcon
            display none

.tTextFieldInput
    padding 0
    border none
    outline none
    color #424242
    width 100%
    padding-right rem(80)
    line-height rem(40)
    background-color transparent
    z-index 2
    position relative /*重要，解决UC、猎豹等浏览器z-index失效的问题*/

.tTextFieldPlaceholder
    position absolute
    left 0
    top 0
    max-width 100%
    height rem(40)
    line-height rem(40)
    color #bdbdbd
    z-index 0

/* add clear input icon */
.tTextFieldIcon
    position absolute
    top rem(-24)
    right 0
    z-index 10
    display inline-block
    padding-left rem(6)
    width rem(70)
    height rem(88)
    line-height rem(40)

    .tIcon
        position absolute
        top rem(30)
        width rem(33)
        height rem(33)
        fill #bbb
